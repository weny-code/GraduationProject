.hover {
  background: #f1f1f1;
}
.main {
  background-color: #ffffff;
  margin: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  overflow: hidden;
  padding: 10rpx 0;
}
.grid-text {
  font-size: 28rpx;
  margin-top: 10rpx;
  color: #000000;
}
.title,
.content {
  margin: 10rpx 0;
  padding: 0 20rpx;
}
.desc {
  font-size: 18px;
  padding: 10rpx 30rpx;
}
.send-class {
  padding: 10rpx 0rpx;
}
.box {
  padding: 30rpx 30rpx 10rpx 30rpx;
}
.class {
  padding: 10rpx 0;
}
.class .class-name {
  font-size: 16px;
}
.btn {
  width: 400rpx;
  margin: 40rpx auto;
}
.addForm {
  width: 90%;
  background: #f4f4f5;
  margin: 20rpx auto;
  font-size: 20px;
  color: #007AFF;
  border-radius: 16rpx;
  padding: 30rpx 10rpx;
  text-align: center;
}
.head {
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  padding: 40rpx 10rpx 10rpx 10rpx;
}
.grid {
  margin-top: 20rpx;
  padding: 20rpx;
  margin-bottom: 300rpx;
}
.item {
  padding: 20rpx 30rpx;
  background: #f4f4f5;
  text-align: center;
  border-radius: 16rpx;
}
.upLoad {
  margin-left: 10rpx;
  padding: 10rpx;
}
.upLoad .upload-desc {
  font-size: 18px;
