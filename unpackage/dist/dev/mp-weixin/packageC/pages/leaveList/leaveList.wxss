.card {
  background-color: #ffffff;
  margin: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  overflow: hidden;
  padding: 20rpx 0;
}
.item {
  margin-top: 10rpx;
  padding: 10rpx;
}
.person-info {
  margin-top: 20rpx;
}
.person-info .info {
  margin-left: 20rpx;
}
.person-info .info .name {
  font-size: 18px;
}
.person-info .info .time {
  font-size: 16px;
  color: #909399;
}
.detail {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: left;
  -webkit-align-items: left;
          align-items: left;
  margin-top: 8rpx;
  margin-left: 10rpx;
  font-size: 16px;
}
.result {
  margin-top: 20rpx;
  font-weight: bold;
  font-size: 18px;
}
